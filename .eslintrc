{
  "root": true,
  "env": {
    "commonjs": true,
    "node"    : true,
    "es6"     : true
  },

  "globals": {
    "env"      : true,
    "module"   : true,
    "require"  : true,
    "__dirname": true
  },

  "parserOptions": {
    "codeFrame"   : false,
    "ecmaVersion" : 2018,
    "sourceType"  : "module",
    "ecmaFeatures": {
      "modules": true
    }
  },

  "extends": [ "./src/configs/standard/index.js" ],

  "rules": {
    "sort-keys": [ 0 ]
  }
}
